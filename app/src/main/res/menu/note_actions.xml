<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AlwaysShowAction">

    <item
        android:id="@+id/search_view"
        android:title="@string/options_menu_item_search"
        android:icon="?attr/ic_search_24dp"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="collapseActionView|always" tools:ignore="AlwaysShowAction"/>

    <item
        android:id="@+id/to_edit_mode"
        android:title="@string/edit"
        android:icon="?attr/ic_edit_24dp"
        app:showAsAction="always" />

    <item
        android:id="@+id/done"
        android:title="@string/done"
        android:icon="?attr/ic_done_24dp"
        app:showAsAction="always" />

    <item
        android:id="@+id/metadata"
        android:icon="?attr/ic_info_outline_24dp"
        app:showAsAction="never"
        android:title="@string/metadata">
        <menu>
            <group android:checkableBehavior="single">
                <item
                    android:id="@+id/metadata_show_all"
                    android:title="@string/show_all" />
                <item
                    android:id="@+id/metadata_show_selected"
                    android:title="@string/show_selected" />
            </group>

            <item
                android:id="@+id/metadata_always_show_set"
                android:title="@string/always_show_set"
                android:checkable="true" />
        </menu>
    </item>

    <item
        android:id="@+id/keep_screen_on"
        app:showAsAction="never"
        android:checkable="true"
        android:title="@string/keep_screen_on"/>

    <item
        android:id="@+id/delete"
        android:icon="?attr/ic_delete_24dp"
        app:showAsAction="never"
        android:title="@string/delete" />

    <item
        android:id="@+id/activity_action_settings"
        app:showAsAction="never"
        android:title="@string/settings"/>
</menu>